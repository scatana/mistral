{% extends 'base.njk' %}

{% set baseURL = "/" + getLocale() %}

{% block fonts %}
  {% include 'partials/fonts.njk' %}
{% endblock %}

{% block styles %}
  <link rel="stylesheet" href="{{'css/landing.css' | asset}}" />
{% endblock %}

{% block body %}
  {% include 'structured_data/services.njk' %}
  {% include 'partials/icons.njk' %}
  <div id="container">
    <header>
      <a href="{{ baseURL }}" class="brand">
        <span class="name">
          <span class="fname">{{ __('brand.contact.fname') }}</span>
          <span class="lname">{{ __('brand.contact.lname') }}</span>
        </span>
      </a>
      <nav>
        <a href="{{ baseURL }}/{{ __('routes.services-and-rates') }}" class="link">
          {{ __('ui.nav-menu.services-and-rates') }}
        </a>
        <a href="{{ baseURL }}/{{ __('routes.testimonials') }}" class="link">
          {{ __('ui.nav-menu.testimonials') }}
        </a>
        <a href="{{ baseURL }}/{{ __('routes.contact') }}" class="button">
          {{ __('ui.nav-menu.contact') }}
        </a>
      </nav>
    </header>
    <main>
      <h1>{{ __('brand.service-type') }}</h1>
      <p>{{ __('brand.service-description') }}</p>
      <p class="contact">
        <a class="email" href="mailto:{{ __('brand.contact.email') }}">
          <svg class="icon icon-mail-reply"><use xlink:href="#icon-mail-reply"></use></svg>
          {{ __('ui.buttons.email-me') }}
        </a>
        <a class="phone" href="tel:+01-514-739-3882">
          <svg class="icon icon-phone"><use xlink:href="#icon-phone"></use></svg>
          {{ __('ui.buttons.call-me') }}
        </a>
      </p>
    </main>
    <footer></footer>
  </div>
{% endblock %}
